# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Spotify Redirect URI (update based on your setup)
# Local development: http://localhost:3000/callback
# Production: https://your-domain.com/callback
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# Optional: Spotify Access Token (if you have one)
# SPOTIFY_ACCESS_TOKEN=your_spotify_access_token_here

# Backend Configuration
FLASK_SECRET_KEY=generate_a_random_secret_key_here
PORT=5000

# Production Configuration (for Vercel deployment)
# Set these in Vercel dashboard under Environment Variables
# - SPOTIFY_CLIENT_ID
# - SPOTIFY_CLIENT_SECRET
# - SPOTIFY_REDIRECT_URI (update to your Vercel domain)
# - FLASK_SECRET_KEY
